name: domain-core
version: 0.1
synopsis: Low-level API of "domain-core"
homepage: https://github.com/nikita-volkov/domain-core
bug-reports: https://github.com/nikita-volkov/domain-core/issues
author: Nikita Volkov <nikita.y.volkov@mail.ru>
maintainer: Nikita Volkov <nikita.y.volkov@mail.ru>
copyright: (c) 2020 Nikita Volkov
license: MIT
license-file: LICENSE
build-type: Simple
cabal-version: >=1.10

source-repository head
  type: git
  location: git://github.com/nikita-volkov/domain-core.git

library
  hs-source-dirs: library
  default-extensions: BangPatterns, BlockArguments, ConstraintKinds, DataKinds, DefaultSignatures, DeriveDataTypeable, DeriveFoldable, DeriveFunctor, DeriveGeneric, DeriveLift, DerivingVia, DeriveTraversable, EmptyDataDecls, FlexibleContexts, FlexibleInstances, FunctionalDependencies, GADTs, GeneralizedNewtypeDeriving, InstanceSigs, LambdaCase, LiberalTypeSynonyms, MagicHash, MultiParamTypeClasses, MultiWayIf, NoImplicitPrelude, NoMonomorphismRestriction, OverloadedLabels, OverloadedStrings, PatternGuards, ParallelListComp, QuasiQuotes, RankNTypes, RecordWildCards, ScopedTypeVariables, StandaloneDeriving, StrictData, TemplateHaskell, TupleSections, TypeApplications, TypeFamilies, TypeOperators
  default-language: Haskell2010
  exposed-modules:
    DomainCore.Attoparsec.CategoryCentricDoc
    DomainCore.Attoparsec.General
    DomainCore.Attoparsec.TypeString
    DomainCore.Deriver
    DomainCore.Resolvers.CategoryCentricDoc
    DomainCore.Resolvers.TypeCentricDoc
    DomainCore.InstanceDec
    DomainCore.InstanceDecs
    DomainCore.Model
    DomainCore.Models.CategoryCentricDoc
    DomainCore.Models.TypeString
    DomainCore.Models.TypeCentricDoc
    DomainCore.ModelTH
    DomainCore.Prelude
    DomainCore.Text
    DomainCore.Util.List
    DomainCore.YamlUnscrambler.CategoryCentricDoc
    DomainCore.YamlUnscrambler.TypeCentricDoc
  other-modules:
  build-depends:
    attoparsec >=0.13 && <0.14,
    base >=4.9 && <5,
    bytestring >=0.10 && <0.11,
    foldl >=1.4.9 && <2,
    hashable >=1 && <2,
    mtl >=2.2 && <3,
    parser-combinators >=1.2.1 && <1.3,
    text >=1.2.4 && <2,
    template-haskell >=2.15 && <3,
    template-haskell-compat-v0208 >=0.1.5 && <0.2,
    th-lego >=0.2 && <0.3,
    transformers >=0.5 && <0.6,
    unordered-containers >=0.2.10 && <0.3,
    yaml-unscrambler >=0.1 && <0.2

test-suite test
  type: exitcode-stdio-1.0
  hs-source-dirs: test
  default-extensions: BangPatterns, BlockArguments, ConstraintKinds, DataKinds, DefaultSignatures, DeriveDataTypeable, DeriveFoldable, DeriveFunctor, DeriveGeneric, DeriveLift, DerivingVia, DeriveTraversable, EmptyDataDecls, FlexibleContexts, FlexibleInstances, FunctionalDependencies, GADTs, GeneralizedNewtypeDeriving, InstanceSigs, LambdaCase, LiberalTypeSynonyms, MagicHash, MultiParamTypeClasses, MultiWayIf, NoImplicitPrelude, NoMonomorphismRestriction, OverloadedLabels, OverloadedStrings, PatternGuards, ParallelListComp, QuasiQuotes, RankNTypes, RecordWildCards, ScopedTypeVariables, StandaloneDeriving, StrictData, TemplateHaskell, TupleSections, TypeApplications, TypeFamilies, TypeOperators
  default-language: Haskell2010
  main-is: Main.hs
  build-depends:
    domain-core,
    foldl >=1.4.9 && <2,
    neat-interpolation >=0.5.1.2 && <0.6,
    QuickCheck >=2.8.1 && <3,
    quickcheck-instances >=0.3.11 && <0.4,
    rerebase >=1.9 && <2,
    tasty >=0.12 && <2,
    tasty-hunit >=0.9 && <0.11,
    tasty-quickcheck >=0.9 && <0.11,
    template-haskell
